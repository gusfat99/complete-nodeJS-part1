<%- include('../templates/head.ejs'); %>
<%- include('../templates/navigation.ejs'); %>  
    <main>
        <form class="form-product" method="POST" action="/admin/<%= editing ? "edit-product" : "add-product"%>">
            <div class="form-control">
                <label for="title">Title</label>
                <input type="text" class="input-control" id="title" name="title" value="<%= editing ? product.title : "" %> " />
            </div>
            <div class="form-control">
                <label for="imageUrl">Image Url</label>
                <input type="text" class="input-control" id="imageUrl" name="imageUrl" value="<%= editing ? product.imageUrl : "" %>" />
            </div>
            <div class="form-control">
                <label for="price">Price</label>
                <input type="number" class="input-control" id="price" name="price" value="<%= editing ? product.price : "" %>" />
            </div>
            <div class="form-control">
                <label for="description">Description</label>
                <textarea name="description" id="description" rows="5" >
                <%= editing ? product.description : "" %> 
                </textarea>
            </div>
            <% if (editing) { %>
                <input type='hidden' name='productId' value='<%= product.id %> '/>
            <% } %>
            <button class="btn" type="submit" > <%= editing ? "Update" : "Add" %></button>
        </form>
    </main>

<%- include('../templates/footer.ejs') %> 